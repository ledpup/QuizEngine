<controls:GesturePageBase
    x:Class="QuizEngine.QuestionPage"
     DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QuizEngine"
    xmlns:common="using:QuizEngine.Common"
    xmlns:controls="using:QuizEngine.Controls" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!--<Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>-->

        <TextBlock
            Text="{Binding Title}"
            Grid.Column="1"
            Grid.Row="1"
            Style="{StaticResource AppTitleTextStyle}"
            IsHitTestVisible="False"/>

        <Border
            Grid.Column="1"
            Grid.ColumnSpan="{Binding QuestionDescriptionColumnSpan}"
            Grid.Row="3"
            Background="Black"
            Opacity="0.5"
            />

        <TextBlock
            Text="{Binding Description}"
            Grid.Column="1"
            Grid.ColumnSpan="{Binding QuestionDescriptionColumnSpan}"
            Grid.Row="3"
            Margin="5,0"
            Style="{StaticResource AppDescriptionTextStyle}"
            IsHitTestVisible="False"
            HorizontalAlignment="Left"
            TextAlignment="Justify"
            />

        <Border
            Visibility="{Binding ImageBorderVisibility}"
            Grid.Row="1"
            Grid.Column="2"
            Grid.RowSpan="6"
            Grid.ColumnSpan="2"
            Background="#CC000000"
            Padding="30"
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            Canvas.ZIndex="1">

            <Image
                Source="{Binding QuestionImage}"
                Stretch="Uniform" />
        </Border>

        <VariableSizedWrapGrid Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="4" x:Name="Answers" Margin="0,20" VerticalAlignment="Top" />
        
        <Border
            Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="5"
            Background="Black"
            Opacity="0.5"
            />
        <TextBlock
            x:Name="Explanation"
            Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="5"
            Style="{StaticResource AppDescriptionTextStyle}"
            IsHitTestVisible="False"
            HorizontalAlignment="Left"
            Margin="10,0,0,0"
            TextAlignment="Justify"
            Visibility="Collapsed"
            />
    </Grid>

</controls:GesturePageBase>